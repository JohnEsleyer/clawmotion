{
  "name": "@johnesleyer/clawmotion",
  "version": "1.0.0",
  "description": "Programmatic video motion engine for AI Agents",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    },
    "./blueprints": {
      "import": "./dist/blueprints/ProBlueprints.js"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    }
  },
  "bin": {
    "clawmotion": "./dist/cli/claw.js"
  },
  "scripts": {
    "build": "tsc && cp src/server/preview.html dist/server/ && esbuild dist/client/index.js --bundle --outfile=dist/bundle.js --platform=browser --format=iife",
    "build:cli": "tsc && cp src/server/preview.html dist/server/",
    "build:studio": "npm run --prefix studio build",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "studio": "npm run build:studio && npm run build && node dist/server/Factory.js",
    "studio:dev": "npm run build:studio && npm run build && concurrently \"node dist/server/Factory.js\" \"npm run --prefix studio dev\"",
    "studio:build": "npm run --prefix studio build"
  },
  "keywords": [
    "video",
    "motion-graphics",
    "animation",
    "canvas",
    "ffmpeg",
    "ai",
    "cli"
  ],
  "author": "John Esleyer",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/express": "^5.0.0",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.24.0",
    "express": "^5.0.0",
    "fft-js": "^0.0.12",
    "fluent-ffmpeg": "^2.1.3",
    "mp4-muxer": "^5.2.2",
    "node-wav": "^0.0.2",
    "puppeteer": "^24.0.0",
    "skia-canvas": "^3.0.0"
  }
}
